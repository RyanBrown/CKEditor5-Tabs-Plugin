{
  "compilerOptions": {
    "lib": [
      "ES2019",
      "ES2020.String",
      "DOM",
      "DOM.Iterable"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./src/declarations.d.ts"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "strict": false,
    "module": "esnext",
    "target": "es2019",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "./src",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.spec.ts"
  ]
}